<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/color_like</item>
        <item name="iconGravity">textStart</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconPadding">@dimen/posts_count_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Style.Button" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/text_color</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/posts_count_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Style.Menu" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_color</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/posts_count_size</item>
        <item name="iconSize">@dimen/menu_size</item>
        <item name="layout_constraintWidth">40dp</item>
        <item name="layout_constraintHeight">40dp</item>
    </style>

    <style name="Style.Player" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="iconSize">52dp</item>
    </style>


</resources>